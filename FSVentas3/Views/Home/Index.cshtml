@{
    ViewBag.Title = "Home Page";
}

@section scripts
{
   <script type="text/javascript">
       $(function () {
           $.getJSON("/Home/Ciudades/List", function (data) {
               var itms = "<option>----------------------------------</option>";
               $.each(data, function (i, Ciudad) {
                   itms += "<option value='" + Ciudad.value + "'>" + Ciudad.Text + "</option>";
               });
               $("#Ciudades").html(itms)

           });
           $("#Ciudades").change(function () {
               $.getJSON("/Home/Municipios/List/" + $("#Ciudades > option:selected").attr("value"), function (data) {
                   var itms = "<option>----------------------------------</option>";
                   $.each(data, function (i, Municipio) {
                       itms += "<option value='" + Municipio.value + "'>" + Municipio.Text + "</option>";
                   });
                   $("#Municipios").html(itms)
               });
           });
       });
      
 </script>   
 }

@using (Html.BeginForm())
{
<hr />
<label for="=Ciudades">Ciudades</label>
<select id="Ciudades"name="=Ciudades"><</select>
<br/><br/>
<label for="Municipios">Municipios</label>
<select id="Municipios"name="Municipios"><</select>
<br /><br />
<input type="submit" value="submit"/>
}

<footer>



    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
</footer>
    
<div class="progress progress-striped active">
    <div class="progress-bar" role="progressbar"
         aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
         style="width: 45%">
        <span class="sr-only">45% completado</span>
    </div>
</div>