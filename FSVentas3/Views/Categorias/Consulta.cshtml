@model IEnumerable<FSVentas3.Models.Categorias>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.CategoriaId }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.CategoriaId }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.CategoriaId })
        </td>
    </tr>
}

</table>
